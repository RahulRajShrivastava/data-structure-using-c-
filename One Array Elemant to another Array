#include<stdio.h>
int main()
{
    int arr1[30],n,i,arr2[30];

    printf("How many number :");
    scanf("%d",&n);

    // scan  array1 Elements;
    for (i=0;i<n;i++)
        {
            scanf("%d",&arr1[i]);
        }

    printf("Array1 : ");
    for(i=0;i<n;i++)

    {
        printf("%d ",arr1[i]);
    }
    printf("\n");

// copy all The Element
    for (i=0;i<n;i++)
    {
        arr2[i]=arr1[i];
    }


    // Print Array2
    printf("Array2 : ");
    for (i=0;i<n;i++)
    {
     printf("%d ",arr2[i]);
    }


 getchar();
}
